<Application x:Class="pr_xaml_1.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:pr_xaml_1"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        
        <Style TargetType="Button">
            <Setter Property="FontSize" Value="18" />
        </Style>

        <Style x:Key="Titulo" TargetType="TextBlock">
            <Setter Property="Text" Value="Práctica XAML. First steps"/>
        </Style>

        <Style x:Key="MiEstilo" TargetType="{x:Type Control}">
            <Setter Property="Margin" Value="15,5" />
            <Setter Property="Padding" Value="0" />
        </Style>

    </Application.Resources>
</Application>
